{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "declaration": true,
        "declarationDir": "declarations",
        "sourceMap": true,
        "lib": [
            "esnext.asynciterable",
            "es6",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}